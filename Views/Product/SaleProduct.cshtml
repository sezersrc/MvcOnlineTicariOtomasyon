@model MvcOnlineTicariOtomasyon.Models.Classes.Sales_Transaction
@{
    ViewBag.Title = "SaleProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Yap</h2>
<br />

<form class="form-group" method="post">
    <label> Ürün ;</label>
    <input type="text" name="ProductID" value="@ViewBag.proid" class="form-control" readonly />
    <input type="text" name="ProductName" value="@ViewBag.brand @ViewBag.name" class="form-control" readonly />
    <br />
    <label> Personel;</label>
    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.emp3, new { @class = "form-control" })
    <label> Cari ID;</label>
    @Html.TextBoxFor(x => x.AccountID, new { @class = "form-control" })
    <br />
    <label> Adet;</label>
    <input type="number" name="Piece" class="form-control" min="0" placeholder="Adet Giriniz" id="txt1" onchange="sum();"  />
    <br />
    <label> Satış Fiyatı;</label>
    <input type="text" name="Price" value="@ViewBag.price " class="form-control" id="txt2" onkeyup="sum()" />
    <br />
    <label> Toplam Tutar;</label>
    
    <input type="text" name="TotalPrice" value="0 " class="form-control" id="txt3" readonly  />
    <br />
   
    <button class="btn btn-primary"> Satış Yap</button>
</form>


<script>
    function sum() {
        var value1 = document.getElementById('txt1').value;
        var value2 = document.getElementById('txt2').value;
        var result = parseInt(value1) * parseInt(value2);
        if (!isNaN(result)) {
            document.getElementById('txt3').value = result;
        }

    }
</script>