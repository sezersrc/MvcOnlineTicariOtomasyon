@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<h2>Ürünler</h2>



<table class="table table-hover">
    <tr>
        <th>GÖRSEL</th>
        <th>MARKA</th>
        <th>ÜRÜN</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>İŞLEMLER</th>
        <th>SAT</th>

    </tr>
    @foreach (var p in Model)
    {
<tr>
    <td>
        <img src="@p.ProductImage" width="100px" height="75px" />
    </td>
    <td>@p.Brand</td>
    <td>@p.ProductName</td>
    <td>@p.Stock</td>
    <td>@p.PurchasePrice ₺</td>
    <td>@p.SalePrice ₺</td>
    <td>@p.Category.CategoryName</td>
    <td>
        <a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger"><i class="fas fa-trash"></i></a>
        <a href="/Product/GetProduct/@p.ProductID" class="btn btn-success"><i class="fas fa-edit"></i></a>
    </td>
    <td><a href="/Product/SaleProduct/@p.ProductID" class="btn btn-primary">SATIŞ YAP</a></td>

</tr>
    }
</table>
<a href="/Product/AddProduct" class="btn btn-primary"> Yeni Ürün Ekle</a>

