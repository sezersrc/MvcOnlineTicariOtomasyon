@model  MvcOnlineTicariOtomasyon.Models.Classes.Product
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Ürün Güncelleme</h2>
<br/>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{

     @Html.HiddenFor(x=>x.ProductID) // Güncellemede hata almamak için 
    <label> Ürün Adı;</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label> Marka;</label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    <label> Stok;</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label> Alış Fiyat;</label>
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    <label> Satış Fiyatı;</label>
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    <label> Durumu;</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <label> Görsel;</label>
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <br />
    <label> Kategori Adı;</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning"> Güncelle</button>

}
