@model MvcOnlineTicariOtomasyon.Models.Classes.Sales_Transaction
@{
    ViewBag.Title = "GetSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Satış Güncelleme</h2>
<br />
@using (Html.BeginForm("UpdateSales", "Sales", FormMethod.Post))
{

    @Html.HiddenFor(x => x.TransactionID) // Güncellemede hata almamak için
    <label> Ürün Adı;</label>
    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.pro1, new { @class = "form-control" })
    <br />
    <label> Cari;</label>
    @Html.DropDownListFor(x => x.AccountID, (List<SelectListItem>)ViewBag.acc2, new { @class = "form-control" })
    <br />
    <label> Personel;</label>
    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.emp3, new { @class = "form-control" })
    <br />
    <label> Adet;</label>
    @Html.TextBoxFor(x => x.Piece, new { @class = "form-control" })
    <br />
    <label> Fiyatı;</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <label> Toplam Tutar;</label>
    @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control" })
    <br />
    <label> Tarih;</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning"> Güncelle</button>

}

