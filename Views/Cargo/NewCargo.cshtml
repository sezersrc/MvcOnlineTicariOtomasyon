@model MvcOnlineTicariOtomasyon.Models.Classes.CargoDetail
@{
    ViewBag.Title = "NewCargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Departman Ekle</h2>
<br />
<form class="form-group" method="post">
    <label> Takip Kodu</label>
    <input type="text" value="@ViewBag.trackingcode" class="form-control" readonly name="TrackingNumber"/>

    <br />
    <label> Personel</label>
    @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    <br />
    <label> Alıcı</label>
    @Html.TextBoxFor(x => x.Recipient, new { @class = "form-control" })
    <br />
    <label> Tarih</label>
    <input class="form-control" type="date" name="CargoDate" />
    <br />
    <label> Açıklama</label>
    @Html.TextAreaFor(x => x.CargDetail, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>



