@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<CargoDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
@using (Html.BeginForm("Index", "Cargo", FormMethod.Post))
{
    <p>
        Kargo Takip NO: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}

<table class="table table-hover" style="margin-top: 20px">

    <tr>
        <th>Personel Adı</th>
        <th>Alıcı Adı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var c in Model)
    {

        <tr>
            <td>@c.Employee</td>
            <td>@c.Recipient</td>
            <td>@c.CargoDate.ToString("d")</td>
            <td>@c.TrackingNumber</td>
            <td>
                <a href="/Cargo/CargoTracking/@c.TrackingNumber" class="btn btn-primary">Detay</a>
            </td>
        </tr>

    }

</table>
<a href="/Cargo/NewCargo" class="btn btn-info"> Yeni Kargo Ekle</a>



