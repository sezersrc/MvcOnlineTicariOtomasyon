@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<CargoDetail>
@{
    ViewBag.Title = "CargoTracking";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<br />
@using (Html.BeginForm("CargoTracking", "AccountPanel", FormMethod.Post))
{
    <p>
        Kargo Takip NO: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-hover" style="margin-top: 20px">

    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Alıcı Adı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>

    </tr>
    @{ int no = 0;}
    @foreach (var c in Model)
    {

        <tr>
            <td>@{ no++;}@no</td>
            <td>@c.Employee</td>
            <td>@c.Recipient</td>
            <td>@c.CargoDate.ToString("d")</td>
            <td>@c.TrackingNumber</td>
            <td>
                <a href="/AccountPanel/AccCargoTracking/@c.TrackingNumber" class="btn btn-primary">Detay</a>
            </td>
        </tr>

    }

</table>






