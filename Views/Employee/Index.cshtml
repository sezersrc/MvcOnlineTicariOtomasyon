@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Personeller</h2>

<table class="table table-hover" style="margin-top: 20px">

    <tr>
        <th>ID</th>
        <th>Görsel</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Departmanı</th>
        <th>İşlemler</th>


    </tr>
    @foreach (var k in Model)
    {

<tr>

    <td>@k.EmployeeID</td>
    <td>
        <img src="@k.EmployeePicture" width="100px" height="75px" />
    </td>
    <td>@k.EmployeeName</td>
    <td>@k.EmployeeSurname</td>
    <td>@k.Department.DepartmentName</td>
    <td>

        <a href="/Employee/GetEmployee/@k.EmployeeID" class="btn btn-success"><i class="fas fa-edit"></i></a>
        <a href="/Department/DepartmentPersonelSale/@k.EmployeeID" class="btn btn-secondary"> Satışlar</a>
    </td>

</tr>

    }

</table>
<a href="/Employee/AddEmployee" class="btn btn-info"> Yeni Personel Ekle</a>



