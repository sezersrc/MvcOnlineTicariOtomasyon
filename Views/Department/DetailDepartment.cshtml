@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Employee>
@{
    ViewBag.Title = "DetailDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Departman Detay</h2>
<br/>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı : @ViewBag.de</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Görsel</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>
                <img src="@x.EmployeePicture" width="150px" height="100px"/>
            </td>
            <td>@x.EmployeeName</td>
            <td>@x.EmployeeSurname</td>
            <td><a href="/Department/DepartmentPersonelSale/@x.EmployeeID" class="btn btn-default" style="background-color: #32cd32;color: white">Satışlar</a></td>
        </tr>
    }
</table>

