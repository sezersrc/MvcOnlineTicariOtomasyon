@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.GroupClass2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Derpartman Tablosu (Partial)</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0;}
                @foreach (var x in Model)
                {

                    <tr>
                        <td>@{no++;}@no</td>
                        <td>@x.departman</td>
                        <td>
                            @if (x.count == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 10%"></div>
                                </div>
                            }
                            @if (x.count == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 20%"></div>
                                </div>
                            }
                            @if (x.count == 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 30%"></div>
                                </div>
                            }
                        </td>
                        <td>

                            @if (x.count == 1)
                            {
                                <span class="badge bg-primary">@x.count</span>
                            }
                            @if (x.count == 2)
                            {
                                <span class="badge bg-warning">@x.count</span>
                            }
                            @if (x.count == 3)
                            {
                                <span class="badge bg-success">@x.count</span>
                            }
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>