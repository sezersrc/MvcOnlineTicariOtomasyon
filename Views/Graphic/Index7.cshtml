
@{
    ViewBag.Title = "Index7";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2> Ürün Stok Grafiği </h2>

<html lang="tr">

<head>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script>

        $(document).ready(function () {

            $.ajax({

                type: "POST",

                dataType: "json",

                contentType: "application/json",

                url: '@Url.Action("VisualizeProductResult2", "Graphic")',

                success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']

                    });

                    google.charts.setOnLoadCallback(function () {

                        drawChart(result);

                    });

                }

            });

        });



        function drawChart(result) {

            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Ad');

            data.addColumn('number', ' Stoklar');

            var dataArray = [];



            $.each(result, function (i, obj) {

                dataArray.push([obj.pro, obj.stk]);

            });

            data.addRows(dataArray);



            var columnChartOptions = {

                title: "Ürün Stok Grafiği",

                width: 1200,

                height: 800,

                bar: { groupWidth: "20%" },

            };



            var columnChart = new google.visualization.ColumnChart(document

                .getElementById('ColumnChart_div'));



            columnChart.draw(data, columnChartOptions);

        }

    </script>

</head>

<body>

<div id="ColumnChart_div"></div>


</body>

</html>


